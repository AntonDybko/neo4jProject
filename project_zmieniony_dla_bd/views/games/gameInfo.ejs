        const removeFromFavourite = (gameId) =>{
            axios.delete(`/removeFromFavourite?game_id=${gameId}`).then(()=>{
                open(location, '_self')
            })
        }
        const addToFavourite = (gameId) =>{
            axios.put(`/addToFavourite?game_id=${gameId}`).then(()=>{
                open(location, '_self')
            })
        }
    </script>
</html>