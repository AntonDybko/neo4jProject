<!doctype html>
<html>
    <head>
        <title>Node Authentication</title>
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script> <!-- load axios test-->
        <style>
            body        { padding-top:80px; }
            .menu {
                background-color: lightgray;
                display: flex;
                flex-wrap: wrap;
                align-items: center;
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="col-sm-6 col-sm-offset-3">
                <nav class="navbar navbar-light bg-light menu">
                    <a href="/main" class="navbar-brand">main page</a>
                    <a href="/logout" class="navbar-brand">logout</a>
                </nav>

                <form action="/addToLibrary/<%= game._id%>" method="post">-->
                    <h1><span class="fa"></span><%= game.name%></h1>
                    <div>
                        <h3>Author:</h3>
                        <div class="form-control"><%= game.author%></div>
                    </div>
                    <hr>
                    <div>
                        <h3>Date of publication:</h3>
                        <div class="form-control"><%= game.date%></div>
                    </div>
                    <hr>
                    <div>
                        <h3>Description:</h3>
                        <div class="form-control"><%= game.description%></div>
                    </div>
                    <% if(!u_library.includes(game._id)) {%>
                        <div>
                            <button type="submit" class="btn btn-warning btn-lg">Add to library</button>
                            <!--<button class="btn btn-default" onclick="addToLibrary('<%= game._id%>')">
                                <span class="fa"></span>
                                remove from library
                            </button>-->
                        </div>
                    <%}else{%>
                        <div>
                            <!--<a href="/removeFromLibrary/<%= game._id%>" class="btn btn-warning btn-lg">Remove from library</a>-->
                            <button class="btn btn-default" onclick="removeFromLibrary('<%= game._id%>')">
                                <span class="fa"></span>
                                remove from library
                            </button>
                        </div>
                    <%}%>

                </form>
            </div>
        </div>
    </body>
    <script>
        const removeFromLibrary = (gameId) =>{
            axios.delete(`/removeFromLibrary/${gameId}`)
        }
        
    </script>
</html>